# Managed Identity (set for Azure-hosted deployments; leave empty for local dev with az login)
AZURE_CLIENT_ID=your-managed-identity-client-id

# Azure OpenAI
AZURE_OPENAI_ENDPOINT=https://forgelens-openai.openai.azure.com
AZURE_OPENAI_DEPLOYMENT=gpt-4o-mini
AZURE_OPENAI_DEPLOYMENT_STRONG=gpt-4o
AZURE_OPENAI_API_VERSION=2025-04-01-preview

# Image Generation (Azure DALL-E 3 — legacy fallback, replaced by fal.ai)
AZURE_OPENAI_IMAGE_DEPLOYMENT=dall-e-3

# fal.ai Media Generation (Nano Banana Pro for images, Kling O3 / Sora 2 for video)
FAL_KEY=your-fal-api-key
FAL_IMAGE_MODEL=fal-ai/nano-banana-pro
FAL_VIDEO_MODEL=fal-ai/kling-video/o3/standard/text-to-video
FAL_VIDEO_MODEL_ALT=fal-ai/sora-2/text-to-video

# Instagram Graph API
INSTAGRAM_BUSINESS_ACCOUNT_ID=your-ig-business-account-id
INSTAGRAM_ACCESS_TOKEN=your-long-lived-access-token

# Web Search (Tavily MCP — API key embedded in URL)
TAVILY_MCP_URL=https://mcp.tavily.com/mcp/?tavilyApiKey=your-tavily-api-key

# Azure Blob Storage (for media files)
# Passwordless (preferred): uses DefaultAzureCredential with account URL
AZURE_STORAGE_ACCOUNT_URL=https://forgelensstorage.blob.core.windows.net/
# Connection string (fallback): uncomment if not using managed identity locally
# AZURE_STORAGE_CONNECTION_STRING=your-connection-string
AZURE_STORAGE_CONTAINER_NAME=insta-media

# Azure Cosmos DB (media metadata — passwordless via DefaultAzureCredential)
COSMOS_ENDPOINT=https://forgelens-cosmos.documents.azure.com:443/
COSMOS_DATABASE=insta-agent
COSMOS_CONTAINER=media-metadata

# Azure Communication Services — Email Notifications (passwordless via DefaultAzureCredential)
ACS_ENDPOINT=https://forgelens-acs.unitedstates.communication.azure.com
# ACS_CONNECTION_STRING=  # fallback if not using managed identity
ACS_SENDER_EMAIL=DoNotReply@fb2ec383-bc71-4a88-8364-623654d619d0.azurecomm.net
REVIEWER_EMAIL=your-email@example.com

# Notifications — Slack (optional fallback)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/xxx/xxx

# Server
PORT=8080

# Telemetry (optional)
APPLICATIONINSIGHTS_CONNECTION_STRING=
